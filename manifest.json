{
    "manifest_version": 2,
    "name": "Imperial Calculator",
    "version": "1.2",

    "description": "A calculator for working with foot-inch values.",
    "icons": {
        "32": "icon.svg",
        "64": "icon.svg",
        "48": "icon.svg",
        "96": "icon.svg"
    },

    "browser_action" : {
        "default_icon" : {
            "32": "icons/icon.svg",
            "48": "icons/icon.svg"
        },
        "default_title": "Imperial Calculator",
        "default_popup": "popup/index.html"
    },

    "sidebar_action" : {
        "default_title": "Imperial Calculator",
        "default_panel": "calc/index.html",
        "default_icon": "icons/icon.svg"
    }
}